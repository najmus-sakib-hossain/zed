    "configuration": {
      "title": "DX",
      "properties": {
        "dx.validateBeforeSave": {
          "type": "boolean",
          "default": true,
          "description": "Validate syntax before saving .dx files"
        },
        "dx.autoSaveGracePeriod": {
          "type": "number",
          "default": 2000,
          "minimum": 500,
          "maximum": 10000,
          "description": "Grace period in milliseconds after last keystroke before auto-save"
        },
        "dx.indentSize": {
          "type": "number",
          "enum": [
            2,
            4
          ],
          "default": 2,
          "description": "Indent size for human-readable format (2 or 4 spaces)"
        },
        "dx.keyPadding": {
          "type": "number",
          "default": 20,
          "minimum": 10,
          "maximum": 50,
          "description": "Minimum padding width for keys in formatted output"
        },
        "dx.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format .dx files on save"
        },
        "dx.formatDelayAfterAutoSave": {
          "type": "number",
          "default": 1500,
          "description": "Additional delay (ms) before formatting when VS Code auto-save is enabled. Prevents formatting while typing."
        },
        "dx.tokenCounter.showFileSize": {
          "type": "boolean",
          "default": true,
          "description": "Show file size alongside token count in status bar"
        },
        "dx.showDensePreview": {
          "type": "boolean",
          "default": false,
          "description": "Show dense format preview on hover"
        },
        "dx.forge.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect to Forge daemon on startup"
        },
        "dx.forge.port": {
          "type": "number",
          "default": 9876,
          "description": "Port for Forge daemon WebSocket connection"
        },
        "dx.forge.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Forge daemon status in status bar"
        },
        "dx.forge.executablePath": {
          "type": "string",
          "default": "",
          "description": "Path to the forge-cli executable. Leave empty to auto-detect from workspace or PATH."
        },
        "dx.check.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable dx-check linting"
        },
        "dx.check.executablePath": {
          "type": "string",
          "default": "",
          "description": "Path to the dx-check executable. Leave empty to auto-detect from workspace or PATH."
        },
        "dx.check.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run linting when files are saved"
        },
        "dx.check.lintOnType": {
          "type": "boolean",
          "default": true,
          "description": "Run linting as you type (with debounce)"
        },
        "dx.check.lintDelay": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "maximum": 2000,
          "description": "Delay in milliseconds before linting after typing stops"
        },
        "dx.check.autoFix": {
          "type": "boolean",
          "default": false,
          "description": "Automatically apply safe fixes on save"
        },
        "dx.check.showDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Show linting diagnostics in the Problems panel"
        },
        "dx.check.rulesDir": {
          "type": "string",
          "default": "",
          "description": "Path to custom rules directory. Leave empty to use default."
        },
        "dx.tableStyle": {
          "type": "string",
          "enum": [
            "unicode",
            "ascii"
          ],
          "default": "unicode",
          "description": "Table rendering style: unicode (box-drawing) or ascii (pipe tables)"
        },
        "dx.phantomMode.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Phantom Mode to hide shadow .md files that have corresponding .dxm files"
        },
        "dx.cache.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic binary cache generation for .dxm files"
        },
        "dx.explosion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable DX Explosion effects when typing"
        },
        "dx.explosion.cyclePresets": {
          "type": "boolean",
          "default": true,
          "description": "Automatically cycle through all explosion presets"
        },
        "dx.explosion.preset": {
          "type": "string",
          "enum": [
            "particles",
            "fireworks",
            "flames",
            "magic",
            "simple-rift",
            "exploding-rift"
          ],
          "default": "fireworks",
          "description": "Explosion preset (when cyclePresets is false)"
        },
        "dx.explosion.comboThreshold": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "description": "Keystrokes before explosions activate (0 = always)"
        },
        "dx.explosion.comboTimeout": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "description": "Seconds before combo resets (0 = never)"
        },
        "dx.explosion.shake.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable screen shaking effect"
        },
        "dx.hologramView.mode": {
          "type": "string",
          "enum": [
            "preview",
            "split",
            "off"
          ],
          "default": "preview",
          "description": "Hologram View display mode: preview (side panel), split (split editor), or off (disabled)"
        },
        "dx.style.outputPath": {
          "type": "string",
          "default": "dist/styles.css",
          "description": "Path to the generated CSS output file for dx-style"
        },
        "dx.style.autoGrouping.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic grouping of classnames when it reduces overall class attribute length"
        },
        "dx.style.autoGrouping.minSavings": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Minimum character savings required to apply auto-grouping"
        },
        "dx.style.inlineExpansion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline expansion of grouped classnames on cursor line"
        },
        "dx.generator.templatePaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".dx/templates"
          ],
          "description": "Paths to search for templates"
        },
        "dx.generator.enableTriggers": {
          "type": "boolean",
          "default": true,
          "description": "Enable trigger-based generation (e.g., //gen:component)"
        },
        "dx.generator.triggerPatterns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern to match (e.g., //gen:(\\w+))"
              },
              "templateId": {
                "type": "string",
                "description": "Template ID to invoke"
              }
            }
          },
          "default": [
            {
              "pattern": "//gen:(\\w+)",
              "templateId": "$1"
            }
          ],
          "description": "Trigger patterns for automatic generation"
        },
        "dx.generator.showTokenSavings": {
          "type": "boolean",
          "default": true,
          "description": "Show token savings in status bar after generation"
        },
        "dx.generator.enableHoverPreview": {
          "type": "boolean",
          "default": true,
          "description": "Show preview of generated output on hover over triggers"
        },
        "dx.generator.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh template list when templates change"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --production",
    "compile": "npm run esbuild-base",
    "esbuild-base": "node esbuild.js",
    "esbuild-watch": "node esbuild.js --watch",
    "watch": "npm run esbuild-watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "node package-extension.js"
  },
