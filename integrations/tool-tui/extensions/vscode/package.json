{
  "name": "dx",
  "displayName": "DX",
  "description": "The unified DX ecosystem extension - Serializer, Forge daemon integration, dx-check linting, and tool orchestration",
  "version": "0.0.1",
  "repository": "https://github.com/manfromexistence/dx",
  "license": "MIT",
  "publisher": "essence",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters",
    "Themes",
    "Other"
  ],
  "keywords": [
    "dx",
    "linter",
    "check",
    "serializer",
    "forge",
    "tools",
    "orchestration",
    "format",
    "llm",
    "token-efficient"
  ],
  "icon": "media/logo.png",
  "activationEvents": [
    "onStartupFinished",
    "onFileSystem:dxlens",
    "onFileSystem:dxhuman",
    "onFileSystem:markdownhuman",
    "onLanguage:dx-serializer",
    "onLanguage:dx-markdown",
    "onLanguage:dx-www-component",
    "onLanguage:dx-www-page",
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "workspaceContains:**/*.sr",
    "workspaceContains:**/*.md",
    "workspaceContains:**/*.human",
    "workspaceContains:**/*.machine",
    "workspaceContains:**/*.cp",
    "workspaceContains:**/*.pg",
    "workspaceContains:dx",
    "onCommand:dx.refreshFromDisk",
    "onCommand:dx.forceSave",
    "onCommand:dx.showDenseView",
    "onCommand:dx.formatDocument",
    "onCommand:dx.setColorTheme",
    "onCommand:dxm.convertToHuman",
    "onCommand:dxm.convertToLlm",
    "onCommand:dxm.toggleTableStyle",
    "onCommand:sr.convertToHuman",
    "onCommand:sr.convertToLlm",
    "onCommand:sr.showTokens",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dx-serializer",
        "aliases": [
          "DX Serializer"
        ],
        "extensions": [
          ".sr",
          ".llm",
          ".human",
          ".machine"
        ],
        "filenames": [
          "dx"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./media/dx-file-extension-light.png",
          "dark": "./media/dx-file-extension-dark.png"
        }
      },
      {
        "id": "dx-markdown",
        "aliases": [
          "DX Markdown"
        ],
        "extensions": [
          ".md"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./media/dx-file-extension-light.png",
          "dark": "./media/dx-file-extension-dark.png"
        }
      },
      {
        "id": "dx-www-component",
        "aliases": [
          "DX WWW Component",
          "DX Component"
        ],
        "extensions": [
          ".cp"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./media/dx-file-extension-light.png",
          "dark": "./media/dx-file-extension-dark.png"
        }
      },
      {
        "id": "dx-www-page",
        "aliases": [
          "DX WWW Page",
          "DX Page"
        ],
        "extensions": [
          ".pg"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./media/dx-file-extension-light.png",
          "dark": "./media/dx-file-extension-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "dx-serializer",
        "scopeName": "source.dx-serializer",
        "path": "./syntaxes/dx-serializer.tmLanguage.json"
      },
      {
        "language": "dx-markdown",
        "scopeName": "source.dx-markdown",
        "path": "./syntaxes/dx-markdown.tmLanguage.json"
      },
      {
        "language": "dx-www-component",
        "scopeName": "source.dx-www",
        "path": "./syntaxes/dx-www.tmLanguage.json"
      },
      {
        "language": "dx-www-page",
        "scopeName": "source.dx-www",
        "path": "./syntaxes/dx-www.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "DX (Light)",
        "uiTheme": "vs",
        "path": "./themes/dx-light.json"
      },
      {
        "label": "DX (Dark)",
        "uiTheme": "vs-dark",
        "path": "./themes/dx-dark.json"
      },
      {
        "label": "DX Markdown",
        "uiTheme": "vs-dark",
        "path": "./themes/dx-markdown-theme.json"
      }
    ],
    "iconThemes": [
      {
        "id": "dx-file-icon-theme",
