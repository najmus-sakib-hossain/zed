    "menus": {
      "editor/title": [
        {
          "command": "dx.refreshFromDisk",
          "when": "resourceExtname == .sr || resourceFilename == dx || resourceExtname == .md || resourceScheme == dxlens || resourceScheme == dxhuman || resourceScheme == dxmhuman",
          "group": "navigation"
        },
        {
          "command": "dx.format.showHuman",
          "when": "editorLangId == dx-markdown || editorLangId == dx-serializer || resourceExtname == .sr || resourceFilename == dx || resourceExtname == .md",
          "group": "navigation"
        },
        {
          "command": "dx.format.showLlm",
          "when": "editorLangId == dx-markdown || editorLangId == dx-serializer || resourceExtname == .sr || resourceFilename == dx || resourceExtname == .md",
          "group": "navigation"
        },
        {
          "command": "dx.format.showMachine",
          "when": "editorLangId == dx-markdown || editorLangId == dx-serializer || resourceExtname == .sr || resourceFilename == dx || resourceExtname == .md",
          "group": "navigation"
        },
        {
          "command": "sr.convertToHuman",
          "when": "resourceExtname == .sr",
          "group": "navigation"
        },
        {
          "command": "sr.showTokens",
          "when": "resourceExtname == .sr",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "dx.generator.generateFromContext",
          "group": "1_modification@1"
        }
      ],
      "explorer/context": [
        {
          "command": "dx.www.newComponentFromContext",
          "when": "explorerResourceIsFolder",
          "group": "dx@1"
        },
        {
          "command": "dx.www.newRouteFromContext",
          "when": "explorerResourceIsFolder && resourceFilename =~ /^(pages|routes|app)$/",
          "group": "dx@2"
        },
        {
          "command": "dx.www.newApiFromContext",
          "when": "explorerResourceIsFolder && resourceFilename =~ /^(api|apis)$/",
          "group": "dx@3"
        }
      ],
      "view/title": [
        {
          "command": "dx.www.refresh",
          "when": "view == dx.wwwView",
          "group": "navigation"
        },
        {
          "command": "dx.www.newProject",
          "when": "view == dx.wwwView",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "dx.hologramView",
          "name": "DXM Preview",
          "when": "resourceExtname == .dxm"
        },
        {
          "id": "dx.drivenView",
          "name": "Driven",
          "icon": "$(robot)"
        },
        {
          "id": "dx.generatorView",
          "name": "Generator",
          "icon": "$(file-code)"
        },
        {
          "id": "dx.dcpView",
          "name": "DCP",
          "icon": "$(plug)"
        },
        {
          "id": "dx.wwwView",
          "name": "DX WWW",
          "icon": "$(globe)"
        }
      ]
    },
    "configurationDefaults": {
      "files.associations": {
        "*.md": "dx-markdown",
        "*.sr": "dx-serializer",
        "dx": "dx-serializer",
        "*.human": "dx-serializer",
        "*.machine": "dx-serializer",
        "*.toml": "dx-serializer"
      },
      "[dx-serializer]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "on"
      },
      "[dx-markdown]": {
        "editor.formatOnSave": false,
        "editor.wordWrap": "on"
      },
